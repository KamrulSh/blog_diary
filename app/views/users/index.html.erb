<h1>Users List</h1>
<table>
  <thead>
  <tr>
    <th>ID</th>
    <th>Username</th>
    <th>Email</th>
    <th>Article Count</th>
    <th>Joined</th>
    <th>Action</th>
  </tr>
  </thead>
  <tbody>
  <% if @users.present? %>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.username, user %></td>
        <td><%= user.email %></td>
        <td><%= pluralize(user.articles.count, "articles") %></td>
        <td><%= time_ago_in_words(user.created_at) %></td>
        <td><%= link_to "Show", user_path(user) %>
          <% if logged_in? && (user == current_user || current_user.admin?) %>
            <%= link_to "Edit", edit_user_path(user) %>
          <% end %>
          <% if logged_in? && current_user.admin? %>
            <%= link_to 'Delete', user_path(user), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  <% else %>
    <tr>
      <td colspan="3">No users found</td>
    </tr>
  <% end %>
  </tbody>
</table>